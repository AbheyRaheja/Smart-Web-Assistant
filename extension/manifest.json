{
  "manifest_version": 3,
  "name": "Page Chatbot",
  "version": "1.0.1",
  "description": "Ask questions and get summaries based on the current page content using an AI assistant.",
  
  "permissions": ["scripting", "activeTab"],

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "Readability.js"],
      "run_at": "document_idle"
    }
  ]
}
